<% show_post ||= false %>

<div class='row'>
  <% if logged_in? %>
  <div class='span0 well text-center'>
    <%= link_to vote_post_comment_path(comment.post, comment, vote:true), method:'post' do %>
      <i class='icon-hand-up'></i>
    <% end %>
    <br />
    <%= pluralize(comment.total_votes,'vote') %>
    <br />
    <%= link_to vote_post_comment_path(comment.post, comment, vote:false), method:'post' do %>
      <i class='icon-hand-down'></i>
    <% end %>
  </div>
  <% end %>
  <div class='well span8'>
    <em><%= comment.body %></em>
    <% if show_post == true %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <span class='quiet'>by</span>
      <%= link_to comment.author.username, user_path(comment.author) %> at <small><%= display_datetime(comment.created_at) %></small>
  </div>
</div>
